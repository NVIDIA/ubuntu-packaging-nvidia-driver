[Unit]
Description=NVIDIA Grid Daemon
Wants=syslog.target

[Service]
Type=forking
ExecStart=/usr/bin/nvidia-gridd
ExecStopPost=/bin/rm -rf /var/run/nvidia-gridd

[Install]
WantedBy=multi-user.target
